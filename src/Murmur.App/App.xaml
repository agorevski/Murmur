<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Murmur.App.Converters"
             x:Class="Murmur.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:IsZeroConverter x:Key="IsZeroConverter" />
            <converters:FavoriteIconConverter x:Key="FavoriteIconConverter" />
            <converters:PremiumStatusConverter x:Key="PremiumStatusConverter" />
            <converters:PremiumColorConverter x:Key="PremiumColorConverter" />
            <converters:AdsStatusConverter x:Key="AdsStatusConverter" />
            <converters:TimerButtonTextConverter x:Key="TimerButtonTextConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
